{
	"name": "@generalworks/gw-front-common",
	"version": "0.0.14",
	"description": "Common frontend utilities and UI components for generalworks projects",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/core/mod.d.ts",
			"default": "./dist/core/mod.js"
		},
		"./core": {
			"types": "./dist/core/mod.d.ts",
			"default": "./dist/core/mod.js"
		},
		"./solid": {
			"types": "./dist/solid/mod.d.ts",
			"default": "./dist/solid/mod.js"
		},
		"./solid/components": {
			"types": "./dist/solid/components.d.ts",
			"default": "./dist/solid/components.js"
		},
		"./vue": {
			"types": "./dist/vue/mod.d.ts",
			"default": "./dist/vue/mod.js"
		},
		"./vue/components": {
			"types": "./dist/vue/components.d.ts",
			"default": "./dist/vue/components.js"
		}
	},
	"scripts": {
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"jsr:check": "bunx --yes jsr publish --dry-run --allow-slow-types --allow-dirty",
		"lint": "biome check core vue solid __tests__",
		"lint:fix": "biome check --write core vue solid __tests__",
		"lint:fix-unsafe": "biome check --write --unsafe core vue solid __tests__",
		"format": "biome format --write core vue solid __tests__",
		"build": "vite build",
		"typecheck": "tsc -p ./tsconfig.build.json --noEmit",
		"fix": "bun run lint:fix && bun run format",
		"check": "bun run lint && bun run typecheck && bun run jsr:check"
	},
	"dependencies": {
		"clone": "^2.1.2",
		"ofetch": "^1.4.0"
	},
	"peerDependencies": {
		"solid-js": ">=1.9.0",
		"vue": ">=3.4.0",
		"dayjs": ">=1.11.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.0",
		"@solid-primitives/storage": "^4.3.3",
		"@types/clone": "^2.1.4",
		"@vitejs/plugin-vue": "^6.0.1",
		"@vitejs/plugin-vue-jsx": "^4.0.0",
		"dayjs": "^1.11.0",
		"solid-js": "^1.9.0",
		"typescript": "~5.6.3",
		"vite": "^7.1.3",
		"vite-plugin-dts": "^4.5.4",
		"vue": "^3.4.0"
	}
}
