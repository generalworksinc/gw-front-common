{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"formatter": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noAssignInExpressions": "off"
			},
			"style": {
				"noUselessElse": "off"
			}
		}
	},
	"javascript": {
		"formatter": { "quoteStyle": "single" }
	},
	"vcs": { "enabled": true, "clientKind": "git" }
}
