{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"formatter": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noAssignInExpressions": "off"
			},
			"style": {
				"noUselessElse": "off"
			}
		}
	},
	"overrides": [
		{
			"includes": ["__tests__/**"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off",
						"useIterableCallbackReturn": "off",
						"noAssignInExpressions": "off"
					},
					"complexity": {
						"noBannedTypes": "off"
					},
					"correctness": {
						"noUnusedImports": "off"
					},
					"performance": {
						"noAccumulatingSpread": "off"
					}
				}
			}
		}
	],
	"javascript": {
		"formatter": { "quoteStyle": "single" }
	},
	"vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true }
}
